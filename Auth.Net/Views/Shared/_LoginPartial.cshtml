@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @if (User.Identity.GetUserName() == StringConstants.MasterUserName)
                {
                    @Html.ActionLink("MasterUser's Page", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                }
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off @User.Identity.GetUserName() </a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
